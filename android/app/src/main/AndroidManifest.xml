<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flutter_application_1"> <!-- Replace with your actual package name -->

    <!-- Camera permission is required for the camera functionality -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Location permissions for GPS functionality -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Internet permission for Supabase/API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Needed if you want to save images to external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" /> <!-- Only needed for Android 10 and below -->
    
    <!-- Required for camera features -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    
    <application
        android:label="Your App Name"
        android:icon="@mipmap/ic_launcher"
        android:requestLegacyExternalStorage="true"> <!-- Needed for Android 10+ -->
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
                
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Don't delete the meta-data below if you're using TFLite -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
            
        <!-- Required for tflite_flutter plugin -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
</manifest>